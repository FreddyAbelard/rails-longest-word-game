<h1>Start the game</h1>
<h2>This is your grid of letters</h2>
<ul>
  <% @letters.each do |letter| %>
    <li class='letter'><%= letter %></li>
  <% end %>
</ul>

<form action="/score" method="post" class="letter-form">

  <label for="word">Build a word with the grid: </label>
  <input type="text" name="word">
  <input type="submit" value="Try!">
  <input type="hidden" value = "<%= @letters.join %>" name="grid-letter">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
